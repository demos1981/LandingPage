---
import styles from './ProductView.module.css';
import { Image } from 'astro:assets';

const {dataProduct} = await import('../../data/dataProduct');

---

<section class={styles.productSection}>
    <h2 class={styles.productTitle}>Продукт</h2>
    <div class={styles.productContainer}>
  
      {dataProduct.map((product) => (
        <li class={styles.productItem}>
          <Image class={styles.productImage} src={product.img} alt={product.name}/>
          <p class={styles.productName}>{product.name}</p>
          <p class={styles.productDescription}>{product.description}</p>
          <button class={styles.addToCartButton}>ПРИДБАТИ</button>
        </li>
      ))}
 
    </div>
</section>